# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI-Compatible API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Model Configuration
# Vision model for receipt/image processing
OPENAI_VISION_MODEL=gpt-4-vision-preview
# Text model for categorization and text processing
OPENAI_TEXT_MODEL=gpt-4

# Legacy variable names (deprecated, use OPENAI_VISION_MODEL and OPENAI_TEXT_MODEL instead)
# VISION_MODEL=gpt-4-vision-preview
# CATEGORIZER_MODEL=gpt-4

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# Application Settings
CONFIDENCE_THRESHOLD=0.8
MAX_RETRIES=3
RETRY_DELAY=2000
LOG_LEVEL=info
NODE_ENV=development

# Memory Monitoring (Optional)
# Interval in milliseconds to log memory usage (default: 30000 = 30 seconds)
# Set to 0 to disable memory monitoring
MEMORY_MONITOR_INTERVAL_MS=30000

# LangSmith Tracing (Optional - for debugging LangGraph workflows)
# View traces at https://smith.langchain.com/
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your_langsmith_api_key_here
# LANGCHAIN_PROJECT=receipt-tracker-agent
# LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
